@model WebForum.ViweModels.ForumTopicVM

    <h1> Forum topic view</h1>

    <span id="headingBtn"> 
        <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id"> New Post</a>
     </span>
    
    <table class = "table table-bordered table-hover">
        @foreach (var post in Model.Posts)
        {   
            <tbody>
                <tr>
                    <td>
                       <a asp-controller="Post" asp-action="Detail" asp-route-id="@post.PostId">@post.PostTitle</a> 
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                     <td>
                        @post.DatePosted
                    </td>
                    
                </tr>
            </tbody>
        }
    </table>
